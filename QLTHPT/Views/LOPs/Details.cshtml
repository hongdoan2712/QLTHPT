@model QLTHPT.Models.LOP

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Chi Tiết Lớp
                                </strong>
                            </h4>


                        </div>
                    </div>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã Lớp
                                        </th>
                                        <th>
                                            Tên Lớp
                                        </th>
                                        <th>Khối</th>
                                        <th>Năm Học</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.LOP_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.LOP_TEN)
                                        </td>
                                        <td>@Html.DisplayFor(model => model.KHOIs.KHOI_TEN)</td>
                                        <td>@Html.DisplayFor(model => model.NAMHOC.NH_NAMHOC)</td>

                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <a href="@Url.Action("Edit", "LOPs", new { id = Model.LOP_MA })" class="btn btn-custon-rounded-three btn-warning"><i class="fa fa-edit"></i></a> |
    <a href="@Url.Action("Index", "LOPs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
</p>

