@model QLTHPT.ModelDB.THONGTINDAOTAO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Chỉnh Sửa</strong></h4>
                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.TTDT_MA)
                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TTDT_MA, "Mã ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TTDT_MA, new { htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.TTDT_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.CB_MA, "Cán Bộ", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("CB_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.CB_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.CN_MA, "Chuyên Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("CN_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.CN_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.HT_MA, "Hình Thức", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("HT_MA", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.HT_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.VB_MA, "Văn Bằng", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("VB_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.VB_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                    @Html.ActionLink("Quay Lại", "Index")
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>