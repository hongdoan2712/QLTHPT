@model QLTHPT.ModelDB.THONGTINLUONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Xóa Thông Tin Lương
                                </strong>
                            </h4>

                        </div>
                    </div>
                    <h5>Bạn có chắc muốn xóa ?</h5>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã Thông Tin Lương
                                        </th>
                                        <th>
                                            Ngày Nhận Lương
                                        </th>
                                        <th>
                                            Hệ Số Lương
                                        </th>
                                        <th>
                                            Bậc Lương
                                        </th>
                                        <th>
                                            Cán Bộ
                                        </th>
                                        <th>
                                            Ngạch Lương
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.TTL_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TTL_NGAYNHANLUONG)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TTL_HESOLUONG)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.BL_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.NL_MA)
                                        </td>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        <a href="@Url.Action("Index", "THONGTINLUONGs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
    </div>
}
