@model QLTHPT.ModelDB.CANBO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Chi Tiết
                                </strong>
                            </h4>

                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã Cán Bộ
                                        </th>
                                        <th>
                                            Tên Cán Bộ
                                        </th>
                                        <th>
                                            Giới Tính
                                        </th>
                                        <th>
                                            Địa chỉ
                                        </th>
                                        <th>
                                            Ngày Sinh
                                        </th>
                                        <th>
                                            CMND
                                        </th>
                                        <th>
                                            Chức Vụ
                                        </th>


                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_HOTEN)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_GIOITINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_DIACHI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_NGAYSINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_CMND)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CB_MA)
                                        </td>

                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <a href="@Url.Action("Edit", "CANBOes", new { id = Model.CB_MA })" class="btn btn-custon-rounded-three btn-warning"><i class="fa fa-edit"></i></a> |
    <a href="@Url.Action("Index", "CANBOes")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
</p>