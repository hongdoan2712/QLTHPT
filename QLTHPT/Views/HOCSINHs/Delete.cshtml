@model QLTHPT.ModelDB.HOCSINH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4>
                                <strong>
                                    Xóa Học Sinh
                                </strong>
                            </h4>

                        </div>
                    </div>
                    <h5>Bạn có chắc muốn xóa ?</h5>
                    <div class="sparkline10-graph">
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã
                                        </th>
                                        <th>
                                            Họ & Tên
                                        </th>
                                        <th>
                                            Giới Tính
                                        </th>
                                        <th>
                                            Ngày Sinh
                                        </th>
                                        <th>
                                            Tôn Giáo
                                        </th>
                                        <th>
                                            Tỉnh Thành
                                        </th>
                                        <th>
                                            Quận Huyện
                                        </th>
                                        <th>
                                            Xã Phường
                                        </th>
                                        <th>
                                            Dân Tộc
                                        </th>
                                        <th>
                                            Sổ Đánh Giá
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.HS_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HS_HOTEN)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HS_GIOITINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HS_NGAYSINH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HS_TONGIAO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.TT_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.QH_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.XP_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.DT_MA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.SODANHGIAs_SDG_MA)
                                        </td>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        <a href="@Url.Action("Index", "HOCSINHs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
    </div>
}
