@model QLTHPT.ModelDB.KYLUAT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sparkline13-list shadow-reset">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h4><strong>Chỉnh Sửa </strong></h4>
                                <div class="sparkline13-outline-icon">
                                    <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                    <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.KL_MA)
                                <div class="form-group-inner">
                                    @Html.LabelFor(model => model.KL_MA, "Mã", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.KL_HINHTHUC, new { htmlAttributes = new { @class = "form-control" } })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.KL_HINHTHUC, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group-inner">
                                    @Html.LabelFor(model => model.KL_HINHTHUC, "Hình Thức Kỷ Luật", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.KL_HINHTHUC, new { htmlAttributes = new { @class = "form-control" } })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.KL_HINHTHUC, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group-inner">
                                    @Html.LabelFor(model => model.KL_NGAYKYLUAT, "Ngày Kỷ Luật", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.KL_NGAYKYLUAT, new { htmlAttributes = new { @class = "form-control" } })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.KL_NGAYKYLUAT, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group-inner">
                                    @Html.LabelFor(model => model.CB_MA, "Cán Bộ", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("CB_MA", null, htmlAttributes: new { @class = "form-control" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.CB_MA, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                        @Html.ActionLink("Quay Lại", "Index")
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
