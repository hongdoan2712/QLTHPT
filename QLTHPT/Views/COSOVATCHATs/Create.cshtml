                                    @Html.ValidationMessageFor(model => model.CSVC_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.PH_MA, "Phòng Học", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("PH_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.PH_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TBDH_MA, "Thiết Bị Dạy Học", htmlAttributes: new { @class = "control-label col-md-2" })
