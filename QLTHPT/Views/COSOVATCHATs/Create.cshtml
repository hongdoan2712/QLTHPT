                                    <br />
                                    @Html.ValidationMessageFor(model => model.TBDH_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TBGD_MA, "Thiết Bị Giảng Dạy", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TBGD_MA, new { htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.TBGD_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.CSVC_SOLUONG, "Số Lượng", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CSVC_SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.CSVC_SOLUONG, "", new { @class = "text-danger" })
