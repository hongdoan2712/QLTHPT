@model QLTHPT.ModelDB.COSOVATCHAT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Chỉnh Sửa Thông Tin Cơ Sở Vật Chất</strong></h4>
                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CSVC_MA)

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.CSVC_MA, "Mã", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CSVC_MA, new { htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.CSVC_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TBDH_MA, "Thiết Bị Dạy Học", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("TBDH_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.TBDH_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TBGD_MA, "Thiết Bị Giảng Dạy", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("TBGD_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.TBGD_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group-inner">
                                @Html.LabelFor(model => model.TT_MA, "Tình Trạng", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("TT_MA", null, htmlAttributes: new { @class = "form-control" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.TT_MA, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                    <a href="@Url.Action("Index", "TINHTRANGs")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
